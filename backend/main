from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from pydantic import BaseModel

app = FastAPI()

# âœ… CORS FIX
app.add_middleware(
    CORSMiddleware,
    allow_origins=["http://127.0.0.1:5500", "http://localhost:5500"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

class TextInput(BaseModel):
    text: str

@app.post("/analyze")
def analyze_text(data: TextInput):
    text = data.text.lower()

    if "happy" in text:
        return {"sentiment": "Positive", "emotion": "Joy", "reply": "Great to hear!"}
    elif "sad" in text:
        return {"sentiment": "Negative", "emotion": "Sadness", "reply": "Stay strong!"}
    else:
        return {"sentiment": "Neutral", "emotion": "Neutral", "reply": "Thanks for sharing!"}
